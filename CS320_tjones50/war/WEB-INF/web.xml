  	<servlet-class>edu.ycp.cs320.tjones50.servlet.AdminServlet</servlet-class>
</servlet>
	<servlet>
    <servlet-name>IndexServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.tjones50.servlet.IndexServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>LoginServlet</servlet-name>
  	<servlet-class>edu.ycp.cs320.tjones50.servlet.LoginServlet</servlet-class>
  </servlet>
    <servlet>
  	<servlet-name>CreateAccountServlet</servlet-name>
  	<servlet-class>edu.ycp.cs320.tjones50.servlet.CreateAccountServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>HomeServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.tjones50.servlet.HomeServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AddNumbersServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.tjones50.servlet.AddNumbersServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>GuessingGameServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.tjones50.servlet.GuessingGameServlet</servlet-class>
  </servlet>
    <servlet>
    <servlet-name>MultNumbersServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.tjones50.servlet.MultNumbersServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>CourseServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.tjones50.servlet.CourseServlet</servlet-class>
  </servlet>
    <servlet>
    <servlet-name>DepartmentServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.tjones50.servlet.DepartmentServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>GiveAdviceServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.tjones50.servlet.GiveAdviceServlet</servlet-class>
  </servlet>
  <servlet>
